<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".TouristNotifyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TouristNotify">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="Registro" />
        
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="Restablecer contraseña" />

        <activity
            android:name=".OnboardingActivity"
            android:label="Bienvenido a TouristNotify" />

        <activity
            android:name=".MenuActivity"
            android:label="Menu" />

        <activity
            android:name=".GlobalSearchActivity"
            android:label="Búsqueda Global" />

        <activity
            android:name=".ServicesDirectoryActivity"
            android:label="Directorio de Servicios" />

        <activity
            android:name=".MyRoutesActivity"
            android:label="Mis Rutas" />

        <activity
            android:name=".ContactsActivity"
            android:label="Contactos de Emergencia" />

        <activity
            android:name=".PreferencesActivity"
            android:label="Preferencias de Ruta" />

        <activity
            android:name=".PlaceDetailsActivity"
            android:label="Detalles del Lugar"
            android:exported="true">

            <!-- Deep Links para códigos QR -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Formato: touristnotify://place/{placeId} -->
                <data
                    android:scheme="touristnotify"
                    android:host="place"
                    android:pathPattern="/.*" />
            </intent-filter>

            <!-- App Links para URLs web (opcional) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Formato: https://touristnotify.app/place/{placeId} -->
                <data
                    android:scheme="https"
                    android:host="touristnotify.app"
                    android:pathPrefix="/place/" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />

        <activity
            android:name=".TopPlacesActivity"
            android:label="Top 10 Lugares Más Visitados" />

        <activity
            android:name=".AdminPlacesActivity"
            android:label="Panel Administrativo - Importar Lugares" />

        <activity
            android:name=".FavoritesActivity"
            android:label="Mis Favoritos" />

        <activity
            android:name=".StatsActivity"
            android:label="Mis Estadísticas" />

        <activity
            android:name=".EventsActivity"
            android:label="Eventos en Álamos" />

        <activity
            android:name=".ThemedRoutesActivity"
            android:label="Rutas Temáticas" />

        <activity
            android:name=".BlogActivity"
            android:label="Blog de Consejos" />

        <activity
            android:name=".BlogPostDetailActivity"
            android:label="Detalle del Post" />

        <activity
            android:name=".AdminBlogActivity"
            android:label="Crear Post - Admin" />

        <activity
            android:name=".ProximityNotificationsActivity"
            android:label="Notificaciones de Proximidad" />

        <activity
            android:name=".PhotoGalleryActivity"
            android:label="Galería de Fotos" />

        <activity
            android:name=".FullScreenPhotoActivity"
            android:label="Foto"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <activity
            android:name=".AdminPhotoUploadActivity"
            android:label="Subir Foto" />

        <activity
            android:name=".OfflineSettingsActivity"
            android:label="Modo Sin Conexión" />

        <!-- Receiver para geofencing -->
        <receiver
            android:name=".GeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>