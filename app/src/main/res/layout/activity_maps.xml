<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:queryHint="Buscar lugares..."
        android:iconifiedByDefault="false"
        android:background="@android:color/white" />

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/filter_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filter_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_museo"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Museos" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_restaurante"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurantes" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_hotel"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_iglesia"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iglesias" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_parque"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parques" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tienda"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiendas" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        app:fabSize="normal"
        tools:visibility="visible"
        android:contentDescription="Guardar Ruta" />

    <!-- Panel de NavegaciÃ³n de Ruta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/route_navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Progreso y Cerrar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/route_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lugar 1 de 5"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorPrimary"
                        tools:text="Lugar 2 de 5" />

                    <TextView
                        android:id="@+id/route_time_estimate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Tiempo estimado: 2h 30min"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="2dp"
                        tools:text="â±ï¸ Tiempo estimado: 2h 30min" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/close_route_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cerrar navegaciÃ³n" />
            </LinearLayout>

            <!-- Nombre del Lugar Actual -->
            <TextView
                android:id="@+id/current_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plaza de Armas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"
                tools:text="Museo Costumbrista" />

            <!-- CategorÃ­a -->
            <TextView
                android:id="@+id/current_place_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ Museo"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="12dp"
                tools:text="ðŸ›ï¸ Museo" />

            <!-- DescripciÃ³n (preview) -->
            <TextView
                android:id="@+id/current_place_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del lugar..."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="16dp"
                tools:text="Ubicado en el centro histÃ³rico, este museo muestra la cultura local..." />

            <!-- Botones de NavegaciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- BotÃ³n Anterior -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previous_place_button"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="â† Anterior"
                    app:icon="@android:drawable/ic_media_previous"
                    app:iconGravity="start" />

                <!-- BotÃ³n Siguiente -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next_place_button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Siguiente â†’"
                    app:icon="@android:drawable/ic_media_next"
                    app:iconGravity="end" />
            </LinearLayout>

            <!-- Botones de AcciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Ver Detalles -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_details_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Ver detalles"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconGravity="start" />

                <!-- Navegar (GPS) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/navigate_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Navegar"
                    app:icon="@android:drawable/ic_dialog_map"
                    app:iconGravity="start" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
