<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PreferencesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_background"
        android:padding="20dp">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Personaliza tu ruta"
            android:textColor="?attr/colorPrimary"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- SubtÃ­tulo -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:text="La IA crearÃ¡ la ruta perfecta para ti"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <!-- Card de preferencias -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/preferences_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Presupuesto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="ðŸ’° Presupuesto"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/budget_input_layout"
                    style="@style/Widget.TouristNotify.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Presupuesto en pesos (MXN)"
                    app:helperText="Aproximado para toda la experiencia"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    app:prefixText="$"
                    app:suffixText="MXN">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/budget_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tiempo disponible -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="â° Tiempo Disponible"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/time_input_layout"
                    style="@style/Widget.TouristNotify.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Horas disponibles"
                    app:helperText="Tiempo que dedicarÃ¡s al recorrido"
                    app:helperTextTextColor="?attr/colorOnSurfaceVariant"
                    app:suffixText="hrs">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/time_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Intereses -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="âœ¨ Tus Intereses"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Selecciona lo que mÃ¡s te gusta:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp" />

                <!-- Grid de checkboxes con mejor diseÃ±o -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chk_comida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:padding="12dp"
                        android:text="ðŸ´ Comida y GastronomÃ­a"
                        android:textSize="15sp"
                        app:buttonTint="?attr/colorPrimary" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chk_cultura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:padding="12dp"
                        android:text="ðŸŽ­ Cultura y Arte"
                        android:textSize="15sp"
                        app:buttonTint="?attr/colorSecondary" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chk_historia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:padding="12dp"
                        android:text="ðŸ›ï¸ Historia y Patrimonio"
                        android:textSize="15sp"
                        app:buttonTint="?attr/colorTertiary" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/chk_aire_libre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="12dp"
                        android:text="ðŸžï¸ Aire Libre y Naturaleza"
                        android:textSize="15sp"
                        app:buttonTint="?attr/colorPrimary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃ³n de generar ruta -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generate_route_button"
            style="@style/Widget.TouristNotify.Button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:text="Generar Ruta con IA"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_mylocation"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/preferences_card" />

        <!-- Nota informativa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="ðŸ¤– Powered by Google Gemini AI"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generate_route_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
