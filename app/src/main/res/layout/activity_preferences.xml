                    app:buttonTint="?attr/colorSecondary" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.2"
                    android:background="?attr/colorOutline" />

                <!-- Campo de texto libre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="ðŸ’¬ PeticiÃ³n Personalizada (Opcional)"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Describe exactamente lo que buscas:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/custom_request_input_layout"
                    style="@style/Widget.TouristNotify.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Lugares romÃ¡nticos para pedir matrimonio"
                    app:helperText="La IA priorizarÃ¡ tu peticiÃ³n especÃ­fica"
