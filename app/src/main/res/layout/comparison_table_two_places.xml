<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="@style/Widget.TouristNotify.CardView"
    app:cardElevation="4dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:stretchColumns="1,2">

        <!-- Header Row -->
        <TableRow android:background="?attr/colorSurfaceVariant"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold" />
            <TextView
                android:id="@+id/place1_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                tools:text="Lugar 1" />
            <TextView
                android:id="@+id/place2_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold"
                tools:text="Lugar 2" />
        </TableRow>

        <!-- Category Row -->
        <TableRow android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Categoría"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_category"
                android:gravity="center"
                tools:text="Museo" />
            <TextView
                android:id="@+id/place2_category"
                android:gravity="center"
                tools:text="Restaurante" />
        </TableRow>

        <!-- Rating Row -->
        <TableRow android:background="?attr/colorSurfaceVariant"
            android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Rating"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_rating"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="4.5 ⭐" />
            <TextView
                android:id="@+id/place2_rating"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="4.2 ⭐" />
        </TableRow>

        <!-- Reviews Row -->
        <TableRow android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Reseñas"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_reviews"
                android:gravity="center"
                tools:text="25 reseñas" />
            <TextView
                android:id="@+id/place2_reviews"
                android:gravity="center"
                tools:text="30 reseñas" />
        </TableRow>

        <!-- Price Row -->
        <TableRow android:background="?attr/colorSurfaceVariant"
            android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Precio"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_price"
                android:gravity="center"
                tools:text="$$" />
            <TextView
                android:id="@+id/place2_price"
                android:gravity="center"
                tools:text="$$$" />
        </TableRow>

        <!-- Schedule Row -->
        <TableRow android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Horario"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_schedule"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="9-18h" />
            <TextView
                android:id="@+id/place2_schedule"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="12-23h" />
        </TableRow>

        <!-- Phone Row -->
        <TableRow android:background="?attr/colorSurfaceVariant"
            android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Teléfono"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_phone"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="123-456" />
            <TextView
                android:id="@+id/place2_phone"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="789-012" />
        </TableRow>

        <!-- Address Row -->
        <TableRow android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Dirección"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_address"
                android:gravity="center"
                android:textSize="11sp"
                tools:text="Calle 1" />
            <TextView
                android:id="@+id/place2_address"
                android:gravity="center"
                android:textSize="11sp"
                tools:text="Calle 2" />
        </TableRow>

        <!-- Visits Row -->
        <TableRow android:background="?attr/colorSurfaceVariant"
            android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                android:text="Visitas"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/place1_visits"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="1234 visitas" />
            <TextView
                android:id="@+id/place2_visits"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="987 visitas" />
        </TableRow>

    </TableLayout>

</com.google.android.material.card.MaterialCardView>
